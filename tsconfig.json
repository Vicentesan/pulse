{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@pulse/*": ["packages/*/src"]
    }
  },
  "include": ["packages/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
